<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin – Bestellungen</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>

<header>
    <h1>Admin-Bereich</h1>
    <p>Hier kannst du Bestellungen einsehen.</p>
</header>

<main>
    <section>
        <h2>Bestellungen</h2>
        <table>
            <thead>
                <tr>
                    <th>Bestellnummer</th>
                    <th>Produkt</th>
                    <th>Kunde</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody id="orders">
                <!-- Hier werden Bestellungen dynamisch eingefügt -->
            </tbody>
        </table>
    </section>
</main>

<footer>
    <a href="index.html">Zurück zur Startseite</a>
</footer>

<script>
    fetch('/get-orders')
        .then(response => response.json())
        .then(orders => {
            const tableBody = document.getElementById('orders');
            orders.forEach(order => {
                let row = `<tr>
                    <td>${order.id}</td>
                    <td>${order.product}</td>
                    <td>${order.customer}</td>
                    <td>${order.status}</td>
                </tr>`;
                tableBody.innerHTML += row;
            });
        })
        .catch(error => console.error("Fehler beim Laden der Bestellungen:", error));
</script>

</body>
</html>
